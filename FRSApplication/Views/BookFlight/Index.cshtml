
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>




<script>
  $.ajax({
        type: "POST",
        dataType: 'JSON',
        url: "@Url.Action("GetCitiesName", "BookFlight")",
        success: function (GetCities) {
            console.log(GetCities);
            $('#GetCities').html('');
            var appenddata1 = '<option value="0">Select City</option>';
                        for (var x = 0; x < GetCities.length; x++) {
                            appenddata1 += (`
                               <option value="${GetCities[x]}">${GetCities[x]}</option>
                           `);

                            //$('#GetCities').append(`
                            //    <option value="${hallsList[x]}"></option>
                            //`);
                           }
            $("#GetCities").append(appenddata1);

        },
        error: function (xhr,status, exception) {
            console.log("Error: " + exception + ", Status: " + status);
        }
    });


</script>


<div id="GetCitiesRow" style="margin-top:50px">
    <label class="col-sm-2">Book Your Flight</label>
    <div class="col-sm-4" style="color:black">
        <select id="GetCities" name="GetCities" class="form-control">
            <option value="0">--Select City--</option>
        </select>

    </div>
</div>


